<%= form_tag expenses_monthly_table_path, class: 'form-inline', remote: true do %>
  <div class="form-group">
    <%#= label_tag :month, 'Month' %>
    <%= text_field_tag :month, '1', class: 'form-control', size: 2, style: 'font-size: 10px' %>
  </div>
  <div class="form-group mx-sm-1">
    <%= text_field_tag :year, '2018', class: 'form-control', size: 5, style: 'font-size: 10px' %>
  </div>
  <%= hidden_field_tag 'household_id', @household.id %>
  <div class="form-group">
    <%= submit_tag 'yepp', class: 'btn btn-sm btn-outline-dark', style: 'font-size: 10px' %>
  </div>
<% end %>