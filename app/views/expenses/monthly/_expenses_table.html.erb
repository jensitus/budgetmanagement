<table class="table table-hover table-sm">
  <thead>
  <th class="text-right pr-md-3"><small>Amount</small></th>

  <th class="pl-md-3"><small>Description</small></th>
  <th><small>Spent at</small></th>
  <th></th>
  <th></th>
  </thead>

  <% @expenses.each do |expense| %>
    <tr>
      <td class="col-sm-1 text-sm-right pr-md-3" id="amount-<%= expense.id %>"><%= fix_it(expense.amount) %></td>

      <td class="col-sm-2 text-sm-left pl-md-3"><%= expense.description %></td>
      <td class="col-sm-1 text-sm-center"><%= expense.spent_at.strftime('%d.%m.%y') %></td>
      <td class="col-sm-1">
        <% expense.categories.each do |category| %>
          <small><%= category.name %></small>
        <% end %>
      </td>
      <td class="col-sm-1 text-sm-right">
        <small><%= link_to 'Edit', edit_household_expense_path(@household, expense) %></small>
      </td>
    </tr>
  <% end %>
</table>
